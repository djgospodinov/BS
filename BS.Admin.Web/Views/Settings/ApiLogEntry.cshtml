@model BS.Common.Models.ApiLogEntry
@{
    ViewBag.Title = "API Лог";
}

<h2>@ViewBag.Title</h2>



<table>
    <tr>
        <td>
            Id:
        </td>
        <td>
            @Html.EditorFor(m => m.Id)
        </td>
    </tr>
    <tr>
        <td>
            Отговор Body:
        </td>
        <td>
            @Html.TextAreaFor(m => m.RequestContentBody, 5, 50, null)
        </td>
    </tr>
    <tr>
        <td>
            Заявка Ip Address:
        </td>
        <td>
            @Html.EditorFor(m => m.RequestIpAddress)
        </td>
    </tr>
    <tr>
        <td>
            Метод:
        </td>
        <td>
            @Html.EditorFor(m => m.RequestMethod)
        </td>
    </tr>
    <tr>
        <td>
           Заявка дата:
        </td>
        <td>
            @Html.EditorFor(m => m.RequestTimestamp)
        </td>
    </tr>
    <tr>
        <td>
            Заявка Uri:
        </td>
        <td>
            @Html.EditorFor(m => m.RequestUri)
        </td>
    </tr>
    <tr>
        <td>
            Отговор Body:
        </td>
        <td>
            @Html.TextAreaFor(m => m.ResponseContentBody, 5, 50, null)
        </td>
    </tr>
    <tr>
        <td>
            Статус код - отговор:
        </td>
        <td>
            @Html.EditorFor(m => m.ResponseStatusCode)
        </td>
    </tr>
    <tr>
        <td>
            Отговор дата:
        </td>
        <td>
            @Html.EditorFor(m => m.ResponseTimestamp)
        </td>
    </tr>
    <tr>
        <td>
            Абсолютен път:
        </td>
        <td>
            @Html.TextBoxFor(m => m.AbsoluteUri, new { style = "width:500px" })
        </td>
    </tr>
</table>

<div style="margin-left:50px;margin-top:20px;">

    @Html.ActionLink("Назад", "Cancel", new { tabIndex = 0 }, new { @class = "link-button" })
</div>

<script>
    $(function () { // will trigger when the document is ready
        $('input').prop('disabled', true);
        $('select').prop('disabled', true);
        $('input').prop('readonly', true);
        $('textarea').prop('readonly', true);
    });
</script>